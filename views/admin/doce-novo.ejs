<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Novo Doce - Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #2c3e50, #34495e);
            min-height: 100vh;
            color: #ecf0f1;
        }

        .admin-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .admin-header {
            text-align: center;
            margin-bottom: 30px;
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 15px;
        }

        .admin-header h1 {
            color: #fff;
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        .back-btn {
            background: #7f8c8d;
            color: white;
            padding: 10px 20px;
            border-radius: 20px;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 20px;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 30px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #e74c3c;
            font-weight: bold;
        }

        .form-group label i {
            margin-right: 8px;
            width: 20px;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px;
            border: 2px solid #34495e;
            border-radius: 10px;
            font-size: 1em;
            background: rgba(255, 255, 255, 0.9);
            color: #2c3e50;
        }

        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: #e74c3c;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .checkbox-group input[type="checkbox"] {
            width: auto;
        }

        .btn {
            background: linear-gradient(45deg, #e74c3c, #c0392b);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            font-size: 1.1em;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        .btn i {
            margin-right: 8px;
        }

        .btn-cancel {
            background: #7f8c8d;
            margin-right: 10px;
        }

        .form-actions {
            display: flex;
            gap: 10px;
            justify-content: center;
            margin-top: 30px;
        }

        .tipo-selection {
            background: #e74c3c;
            color: white;
            padding: 15px;
            border-radius: 10px;
            text-align: center;
            margin-bottom: 20px;
        }

        .tipo-selection select {
            background: white;
            color: #2c3e50;
            border: none;
            padding: 10px;
            border-radius: 5px;
            font-size: 1em;
            margin-top: 10px;
            width: 200px;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <a href="/admin/produtos" class="back-btn"><i class="fas fa-arrow-left"></i>Voltar para Produtos</a>
        
        <div class="admin-header">
            <h1><i class="fas fa-plus-circle"></i>Novo Produto</h1>
            <p>Adicione um novo produto ao card√°pio</p>
        </div>

        <div class="form-container">
            <form method="POST" action="/admin/doce/novo">
                <div class="tipo-selection">
                    <label for="tipo"><i class="fas fa-tag"></i>Tipo de Produto:</label>
                    <select id="tipo" name="tipo" required onchange="mostrarCampos()">
                        <option value="">Selecione o tipo</option>
                        <option value="brigadeiro">üç´ Brigadeiro</option>
                        <option value="brownie">üç∞ Brownie</option>
                        <option value="pipoca">üçø Pipoca</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="nome"><i class="fas fa-box"></i>Nome do Produto:</label>
                    <input type="text" id="nome" name="nome" required>
                </div>

                <div class="form-group">
                    <label for="descricao"><i class="fas fa-align-left"></i>Descri√ß√£o:</label>
                    <textarea id="descricao" name="descricao" rows="3" required></textarea>
                </div>

                <!-- Campos din√¢micos de pre√ßos -->
                <div id="campos-dinamicos">
                    <!-- Os campos espec√≠ficos de cada tipo aparecer√£o aqui -->
                </div>

                <div class="form-group checkbox-group">
                    <input type="checkbox" id="disponivel" name="disponivel" checked>
                    <label for="disponivel"><i class="fas fa-check-circle"></i>Dispon√≠vel para venda</label>
                </div>

                <div class="form-actions">
                    <a href="/admin/produtos" class="btn btn-cancel">
                        <i class="fas fa-times"></i>Cancelar
                    </a>
                    <button type="submit" class="btn">
                        <i class="fas fa-save"></i>Criar Produto
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function mostrarCampos() {
            const tipo = document.getElementById('tipo').value;
            const camposDiv = document.getElementById('campos-dinamicos');
            
            let html = '';
            
            if (tipo === 'brigadeiro') {
                html = `
                    <h3>Pre√ßos - Brigadeiro</h3>
                    <div class="form-group">
                        <label for="preco_25"><i class="fas fa-coins"></i>Pre√ßo 25 unidades:</label>
                        <input type="number" id="preco_25" name="preco_25" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="preco_50"><i class="fas fa-coins"></i>Pre√ßo 50 unidades:</label>
                        <input type="number" id="preco_50" name="preco_50" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="preco_100"><i class="fas fa-coins"></i>Pre√ßo 100 unidades:</label>
                        <input type="number" id="preco_100" name="preco_100" step="0.01" min="0" required>
                    </div>
                `;
            } else if (tipo === 'brownie') {
                html = `
                    <h3>Pre√ßos - Brownie</h3>
                    <div class="form-group">
                        <label for="preco_pequeno"><i class="fas fa-coins"></i>Pre√ßo tamanho Pequeno:</label>
                        <input type="number" id="preco_pequeno" name="preco_pequeno" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="preco_medio"><i class="fas fa-coins"></i>Pre√ßo tamanho M√©dio:</label>
                        <input type="number" id="preco_medio" name="preco_medio" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="preco_grande"><i class="fas fa-coins"></i>Pre√ßo tamanho Grande:</label>
                        <input type="number" id="preco_grande" name="preco_grande" step="0.01" min="0" required>
                    </div>
                `;
            } else if (tipo === 'pipoca') {
                html = `
                    <h3>Pre√ßos - Pipoca</h3>
                    <div class="form-group">
                        <label for="preco_45gr"><i class="fas fa-coins"></i>Pre√ßo 45gr:</label>
                        <input type="number" id="preco_45gr" name="preco_45gr" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="preco_50gr"><i class="fas fa-coins"></i>Pre√ßo 50gr:</label>
                        <input type="number" id="preco_50gr" name="preco_50gr" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="preco_100gr"><i class="fas fa-coins"></i>Pre√ßo 100gr:</label>
                        <input type="number" id="preco_100gr" name="preco_100gr" step="0.01" min="0" required>
                    </div>
                `;
            } else {
                html = '';
            }
            
            camposDiv.innerHTML = html;
        }

        // Se vier ?tipo=brigadeiro na URL, j√° seleciona e mostra campos
        document.addEventListener('DOMContentLoaded', () => {
            const params = new URLSearchParams(window.location.search);
            const tipoParam = params.get('tipo');
            if (tipoParam) {
                const select = document.getElementById('tipo');
                select.value = tipoParam;
                mostrarCampos();
            }
        });
    </script>
</body>
</html>
